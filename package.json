{
  "name": "logistics-dashboard",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:frontend && npm run test:backend",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "test:frontend": "npm --prefix frontend run test",
    "test:backend": "npm --prefix backend run test",
    "test:assignment": "npm --prefix backend run test:assignment",
    "start:frontend": "npm --prefix frontend start",
    "start:backend": "npm --prefix backend start",
    "prepare": "husky",
    "install-deps": "npm install && npm --prefix backend run install-deps",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "phase2:setup": "npm run install-deps && echo \"ğŸ”§ Phase 2 dependencies installed!\"",
    "phase2:test": "npm run test:assignment && echo \"ğŸ§ª Phase 2 tests passing!\"",
    "phase2:ready": "npm run quality && npm run phase2:test && echo \"ğŸš€ Phase 2 ready to start!\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@eslint/js": "^9.29.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "joi": "^17.13.3"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
